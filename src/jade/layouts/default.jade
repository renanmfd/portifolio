        | <!--[if lt IE 9]>
        script(src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js")
        script(src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js")
        | <![endif]-->

    body.layout-default
        div#page
            header#header
                block header
                    include blocks/_header.jade
            main#content
                block content
                    include blocks/_content.jade
            footer#footer
                block footer
                    include blocks/_footer.jade
        block script
            include blocks/_script.jade
