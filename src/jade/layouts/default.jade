doctype html
html(lang="pt-br")
    head
        block meta
            include blocks/_meta.jade
        title
            block title
            | &nbsp;| #{base_title}
        block style
            include blocks/_style.jade
        //- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
